<div>
  <%= flash[:notice]%>
</div>
<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>  
  </ul>
<% end %>  
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %> 
      <div class="form-group">
      <%= f.label :name, "Name"%><br>  
      <%= f.text_field :name, autofocus: true, id: "user_name", placeholder: "Name" %>
      </div> 
      <div class="form-group"> 
      <%= f.label :user_image, "Image" %><br> 
      <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
      </div> 
      <div class="form-group"> 
      <%= f.label :user_introduction, "Introduction" %>
      <%= f.text_area :user_introduction, placeholder: "Introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>