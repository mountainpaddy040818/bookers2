<div class="container">
    <div class="row">
        <div class="col-md-3">
<%= render 'list', book: @book, user: @user %>
        </div>

<div class="col-md-8 offset-md-1">
    <br>
    <h2>Book detail</h2>
    <table class="table">
        <thead></thead>
    <tbody>
    <tr>

        <td>
            <%= link_to user_path(@book_show.user.id) do %>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <%= @user.name %>
            <% end %>
        </td>
        <br>
        <td>
            <%= link_to @book_show.title, book_path(@book_show.id) %>
        </td>
        <td>
            <%= @book_show.body %>
        </td>

        <% if @user == current_user %>

        <td>
             <%= link_to edit_book_path(@book_show.id),
             class: "btn btn-sm btn-success" do %>Edit
             <% end %>
        </td>
        <td>
             <%= link_to book_path(@book_show.id),
             class: "btn btn-sm btn-danger", method: :delete,
             "data-confirm" => "本当に消しますか？" do %>Destroy
             <% end %>
        </td>
        <% end %>
    </tr>
    </tbody>
    </table>
</div>
</div>
</div>