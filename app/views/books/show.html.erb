<div class="container">
    <div class="row">
        <div class="col-md-3">
<%= render 'list', book: @book, user: @user %>
        </div>

<div class="col-md-8 offset-md-1"><br>
    <h2>Book detail</h2>
    <table class="table">
    <tr>
        <td>
            <%= image_tag @user.get_profile_image(100,100)%>
        <br>
            <%= link_to @user.name, user_path(@user.id) %>
        </td>
        <td>
            <%= link_to @book_show.title, book_path(@book_show.id) %>
        </td>
        <td>
            <%= @book_show.body %>
        </td>
        <td>
             <%= link_to edit_book_path(@book_show.id), class: "btn btn-sm btn-success" do %>Edit<% end %>
        </td>
        <td>
            <% if @book.user == current_user %>
              <%= link_to book_path(@book_show.id), class: "btn btn-sm btn-danger", method: :delete,"data-confirm" => "本当に消しますか？" do %>Destroy<% end %>
            <% end %>
        </td>
    </tr>
    </table>
</div>
</div>
</div>