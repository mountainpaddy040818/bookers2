<p id="notice"></p>
<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
           <h2>User info</h2>
           <%= image_tag @user.get_profile_image(100,100)%>
           <table class="table">
              <tr>
                  <th>name</th>
                   <td></td>
              </tr>
              <tr>
                  <th>introduction</th>
                  <td></td>
              </tr>
           </table>

<h2 class="mt-3">New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
  </div>
  <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body %>
  </div>
  <div class="form-group">
      <%= f.submit 'Create Book', class:'btn btn-secondary bg-success' %>
  </div>
<% end %>
</div>
 <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
     <table class="table table-hover table-inverse">
     <% @books.each do |book| %>      
     <tr>
         <th>Title</th>
         <%= book.title %>
         <th>Opinion</th>
         <%= book.body %>
     </tr>
     <% end %>

     </table>
  </div>
</div>
</div>